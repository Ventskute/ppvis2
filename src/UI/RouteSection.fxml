<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="body"
            stylesheets="@main.css">
    <VBox AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" spacing="10">
        <StackPane styleClass="header">
            <fx:include source="MenuButton.fxml" />
            <Label fx:id="headerText" StackPane.alignment="CENTER_RIGHT">ROUTE BUILDING</Label>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </StackPane>

        <VBox spacing="10" >
            <TextField fx:id="routeFrom" promptText="FROM" />
            <TextField fx:id="routeTo" promptText="TO" />
            <Separator prefWidth="200.0" />
            <Label text="Filter" />
            <CheckBox selected="true" text="Bus" />
            <CheckBox selected="true" text="Trolleybus" />
            <CheckBox selected="true" text="Tram" />
            <CheckBox selected="true" text="Metropolitan" />
            <CheckBox selected="true" text="Routed Taxicab" />

            <padding>
                <Insets right="20" bottom="20" left="20" />
            </padding>
        </VBox>
    </VBox>
    <Button AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" styleClass="full-width-button" text="BUILD">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
</AnchorPane>